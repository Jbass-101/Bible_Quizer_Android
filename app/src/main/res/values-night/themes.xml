<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BibleQuiz" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">
            @android:color/transparent</item>


        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:windowLightStatusBar">
            false
        </item>



    </style>

    <style name="Theme.CustomTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/AppDarkMode</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_light</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.BibleQuiz</item>
    </style>


</resources>